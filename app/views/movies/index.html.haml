-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{@hilite_column == 'title_header'? {:class => 'hilite'} : {}}
        %a#title_header{:href=>movies_path({:id => 'title'})  } Movie Title
      %th Rating
      %th{@hilite_column  == 'release_date_header'? {:class => 'hilite'} : {}}
        %a#release_date_header{:href=>movies_path({:id => 'release_date'})} Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
